<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .pass {
            color: green;
            font-weight: bold;
        }
        .fail {
            color: red;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>Students Reports</h1>
    <form action="/students" method="get">
        <label for="search"></label>
        <input type="text" name="search" id="search">
        <button>Search</button>
    </form>

    </form>
<table border="1"> 
        <tr>
            <td>Sr</td>
            <td>Name</td>
            <td>Age</td>
            <td>Marks</td>
            <td>Result</td>
        </tr>
        <tr>
           <% students.forEach((student, index) =>{ %>
                <tr> 
                    <td><%= index + 1 %></td>
                    <td><%= student.name %></td>
                    <td><%= student.age %></td>
                    <td><%= student.marks %></td>
                    <td class="<%= student.marks >= 35 ? 'pass' : 'fail' %>"> 
                        <%= student.marks >= 35 ? 'Pass' : 'Fail' %>
                    </td>
                </tr>
           <% }) %>
        </tr>
</table>

</body>
</html>

